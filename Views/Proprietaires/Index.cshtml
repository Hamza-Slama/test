@model IEnumerable<CarsMVCManager.Models.Proprietaire>
@using CarsMVCManager.Helpers
@{

@helper Upper(String CH) {@CH.ToUpper() }
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumPermis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @Upper(item.Nom)
             
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumPermis)
        </td>
        <td>
           @MesHelpers.UpperContact(item.Contact)
             @Html.DisplayFor(modelItem => item.Contact)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
